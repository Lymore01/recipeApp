<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YumQuest | recepie</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <%= stylesheet_link_tag 'recipes' %>
  </head>
  <body>
    <div id="flash-notice" class="notice">
        
    </div>
<div class="recipe-form">
  <%= form_with(model: @recipe, url: recipes_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </div>
    <div class="form-group">
      <%= form.label :ingredients %>
      <%= form.text_area :ingredients, class: 'form-control', placeholder: 'Enter ingredient' %>
    </div>
    <div class="form-group">
      <%= form.label :instructions %>
      <%= form.text_area :instructions, class: 'form-control', placeholder: 'Enter instruction' %>
    </div>
    <div class="form-group">
      <%= form.label :photo %>
      <%= form.file_field :photo, class: 'form-control-file' %>
    </div>
    <p>or</p>
     <div class="form-group">
      <%= form.label :photo_url %>
      <%= form.url_field :thumb, class: 'form-control', placeholder: 'Enter thumb URL' %>
    </div>
    <div class="form-group">
      <%= form.label :video %>
      <%= form.url_field :video, class: 'form-control', placeholder: 'Enter video URL' %>
    </div>
    <div class="form-group">
      <%= form.label :category %>
      <%= form.text_area :category, class: 'form-control', placeholder: 'Enter meal category' %>
    </div>
    <div class="form-group">
      <%= form.label :area %>
      <%= form.text_area :area, class: 'form-control', placeholder: 'Enter meal area' %>
    </div>
    <div class="form-group">
      <%= form.label :source %>
      <%= form.text_area :source, class: 'form-control', placeholder: 'Enter the source of this meal' %>
    </div>
    <%= form.submit "Create Recipe", class: 'btn btn-primary' %>
  <% end %>
</div>
</body>
    </html>